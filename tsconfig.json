{
    "compilerOptions": {
        "lib": [ "es5", "es6", "es7",
                "es2015", "es2016",
                "es2017", "es2018",
                "esnext", "dom" ],
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "rootDir": "./",
        "declaration": true,
        "declarationMap": true,
        "inlineSourceMap": false,
        "inlineSources": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "models/*": ["src/models/*"],
            "controllers/*": ["src/controllers/*"],
            "services/*": ["src/services/*"],
            "repositories/*": ["src/repositories/*"],
            "lib/*": ["src/lib/*"],
            "config/*": ["src/config/*"]
        },
        "esModuleInterop": true,
        "jsx": "react"
    },
    "exclude": [
        "dist/**/*",
        "src/**/*.spec.ts",
        "node_modules",
        "src/ui/**"
    ]
}